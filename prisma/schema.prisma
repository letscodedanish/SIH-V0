generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model MissingPerson {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  lastSeen    String
  reportedBy  String
  photo       String?  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model MissingItem {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  itemName    String
  description String
  lastSeen    String
  reportedBy  String
  photo       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Criminal {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  lastSeen    String
  reportedBy  String
  photo       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

